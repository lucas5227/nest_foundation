<div class="container mt-5">
    <h2>게시물 <%= post ? '수정' : '작성'; %></h2>
    <form action="/admin/board/write/1" method="POST" onsubmit="return saveContent();">
        <input type="hidden" name="cmd" value="" />
        <input type="hidden" name="brd_id" value="1" />
        <input type="hidden" name="post_id" value="<%= post ? post.post_id : '' %>" />
        <input type="hidden" name="mem_id" value="1" />
        <table class="table">
            <tbody>
            <tr>
                <td><label for="post_title" class="form-label">제목</label></td>
                <td>
                    <input type="text" class="form-control" id="post_title" name="post_title"
                           placeholder="게시물 제목을 입력하세요"
                           value="<%= post ? post.post_title : '' %>"
                           required>
                </td>
            </tr>
            <tr>
                <td><label for="postCategory" class="form-label">카테고리</label></td>
                <td>
                    <select class="form-select" id="cat_id" name="postCategory" required>
                        <option value="" disabled selected>카테고리를 선택하세요</option>
                        <option value="1">기술</option>
                        <option value="2">생활</option>
                        <option value="3">뉴스</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label for="post_content" class="form-label">내용</label></td>
                <td>
                    <div id="summernote"><%- post ? post.post_content : ''; %></div>
                    <input type="hidden" id="post_content" name="post_content" />

                </td>
            </tr>
            <tr>
                <td><label for="attachment1" class="form-label">첨부파일 1</label></td>
                <td>
                    <input type="file" class="form-control" id="attachment1" name="attachment1">
                </td>
            </tr>
            <tr>
                <td><label for="attachment2" class="form-label">첨부파일 2</label></td>
                <td>
                    <input type="file" class="form-control" id="attachment2" name="attachment2">
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-end">
                    <button type="submit" class="btn btn-primary">작성하기</button>
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>

