<div class="container mt-5">
    <h1 class="mt-4"><%= title ;%></h1>

<div class="d-flex justify-content-between align-items-center">
    <div class="ms-auto">
        <a href="/admin/popup/write" class="btn btn-primary">팝업 추가</a>
    </div>
</div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">제목</th>
                <th scope="col">작성자</th>
                <th scope="col">위치</th>
                <th scope="col">작성일</th>
            </tr>
        </thead>
        <tbody>
        <% data.forEach((popup) => { %>
            <tr>
                <th scope="row">1</th>
                <td><a href="/admin/popup/write?pop_id=<%= popup.pop_id %>"><%= popup.pop_title %></a></td>
                <td>홍길동</td>
                <td><%= popup.pop_display_date %></td>
            </tr>
        <% }); %>
            <!-- 더 많은 게시글이 여기에 추가될 수 있습니다 -->
        </tbody>
    </table>

    <% if(paging.prevShow || paging.nextShow) { %>
        <!-- 페이지네이션 -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% if(paging.prevShow) { %>
                    <li class="page-item">
                        <a class="page-link" href="/admin/board/brd_key?page=<%= paging.start - 1; %>" tabindex="-1"
                           aria-disabled="true">이전</a>
                    </li>
                <% } %>
                <% for(i = paging.start; i <= paging.end; i++){ %>
                    <li class="page-item <%=paging.now==i ? 'active' : ''%>"><a class="page-link" href="<%=paging.now%>"><%=i%></a></li>
                <% } %>
                <% if(paging.nextShow) { %>
                    <li class="page-item">
                        <a class="page-link" href="/admin/board/brd_key?page=<%= paging.end + 1 %>">다음</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>
