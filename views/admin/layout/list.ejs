<!-- Container -->
<div class="container-fluid px-4">
    <h1 class="mt-4"><%= title ;%></h1>

    <!-- Menu Sections -->
    <div class="row mt-5">
        <!-- First Menu -->
        <div class="col-md-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">1차메뉴</h5>
                <div>
                    <button class="btn btn-success btn-sm" id="addDepth1" data-parent="0">추가</button>
                    <button class="btn btn-danger btn-sm">삭제</button>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th><input type="checkbox" id="chkAll"></th>
                    <th>메뉴코드</th>
                    <th>메뉴명</th>
                    <th>종류</th>
                    <th>수정</th>
                </tr>
                </thead>
                <tbody>
                <%data.map((item) => {%>
                    <tr class="depth-1" data-depth="1" data-men_id="<%=item.men_id;%>">
                        <td><input type="checkbox"></td>
                        <td><%= item.men_code ;%></td>
                        <td><%= item.men_title ;%></td>
                        <td><%= item.men_type ;%></td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-secondary btn-sm">▲</button>
                                <button class="btn btn-secondary btn-sm">▼</button>
                                <button class="btn btn-primary btn-sm" data-update="<%=item.men_id;%>">수정</button>
                            </div>
                        </td>
                    </tr>
                <%});%>
                </tbody>
            </table>
        </div>

        <!-- Second Menu -->
        <div class="col-md-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">2차메뉴</h5>
                <div>
                    <button class="btn btn-success btn-sm" id="addDepth2">추가</button>
                    <button class="btn btn-danger btn-sm">삭제</button>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th><input type="checkbox" id="chkAll"></th>
                    <th>메뉴코드</th>
                    <th>메뉴명</th>
                    <th>종류</th>
                    <th>수정</th>
                </tr>
                </thead>
                <tbody class="depth-2-body">
                <tr>
                    <td colspan="5" class="text-center">상위 메뉴를 선택하세요.</td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Third Menu -->
        <div class="col-md-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">3차메뉴</h5>
                <div>
                    <button class="btn btn-success btn-sm" id="addDepth3">추가</button>
                    <button class="btn btn-danger btn-sm">삭제</button>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th><input type="checkbox" id="chkAll"></th>
                    <th>메뉴코드</th>
                    <th>메뉴명</th>
                    <th>종류</th>
                    <th>수정</th>
                </tr>
                </thead>
                <tbody class="depth-3-body">
                <tr>
                    <td colspan="5" class="text-center">상위 메뉴를 선택하세요.</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Save Button -->
    <div class="text-end mt-4">
        <button class="btn btn-primary">저장하기</button>
    </div>
</div>
<script>
  const menuTree = <%- JSON.stringify(data) %>;
</script>
<!-- External JS -->
<script src="/admin/js/sitemap.js"></script>
